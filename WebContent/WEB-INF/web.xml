<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>ImageManagementService</display-name>
  <welcome-file-list>
    <welcome-file>UserLogin.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.assignment.web.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>ImageUploadServlet</servlet-name>
    <servlet-class>com.assignment.web.ImageUploadServlet</servlet-class>
    <multipart-config>
      <max-file-size>10485760</max-file-size>
      <max-request-size>20971520</max-request-size>
      <file-size-threshold>5242880</file-size-threshold>
    </multipart-config>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>ImageUploadServlet</servlet-name>
    <url-pattern>/MainUtility</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>DeleteControllerServlet</servlet-name>
    <servlet-class>com.assignment.web.DeleteControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>DeleteControllerServlet</servlet-name>
    <url-pattern>/delete</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>EditControllerServlet</servlet-name>
    <servlet-class>com.assignment.web.EditControllerServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EditControllerServlet</servlet-name>
    <url-pattern>/edit</url-pattern>
  </servlet-mapping>
  
</web-app>